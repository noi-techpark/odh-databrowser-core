
@{
    ViewBag.Title = "SlideList LTS";
}
@section jumbotronsect {
    <h2>Sldedge Activities List (LTS)</h2>
}
@section infomodaltext {
    <h2>Activity Data / Sledge</h2>
    <p>All data is syncronized daily from LTS TIC Web Interface (Activity Data).</p>
    <p>
        All data is daily updated also present on the container ODHActivityPoi.
    </p>

    <p>Only CC0 Images are displayed</p>
}

<div class="col-sm-12" ng-app="activity" ng-controller="activityListController" ng-init="init('Rodelbahnen','@ViewBag.predefinedlocationfilter','@ViewBag.predefinedlocationfiltertyp')">

    <div class="splash" ng-show="isloading">
        <h2>
            Loading
        </h2>
        <span>
            <i class="fa fa-spinner fa-5x fa-spin active"></i>
        </span>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="form-inline">

                <div class="pull-right">
                    <div class="btn-group" ng-click="changeLanguage()">

                        <label class="btn btn-default" ng-model="lang" btn-radio="'de'">de</label>
                        <label class="btn btn-default" ng-model="lang" btn-radio="'it'">it</label>
                        <label class="btn btn-default" ng-model="lang" btn-radio="'en'">en</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <br />
            <div class="form-inline">
                <div class="pull-right">
                    <span class="btn btn-default"> Elements: {{ totalcount }} </span>
                    <input type="button" id="prevpage" ng-click="changePage(-1,true)" class="btn btn-info" value="prev" ng-disabled="page == 1" />
                    &nbsp;{{ page }}&nbsp;/&nbsp;{{ totalpages }}&nbsp;
                    <input type="button" id="nextpage" ng-click="changePage(+1,true)" class="btn btn-info" value="next" ng-disabled="page == totalpages || totalpages == 0" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <br />
        <div class="col-sm-3 col-xs-12 table-bordered filtertable">
            <div class="form-inline">
                <br />
                <div class="form-group col-sm-12">
                    <input type="button" id="filterbutton" ng-click="applyFilter(1)" class="btn btn-info" value="Filter" />
                    <input type="button" id="clearfilterbutton" ng-click="clearFilter()" class="btn btn-default" value="Clear" />
                </div>

                @*<div class="form-group col-sm-12">
                        <h6>Name</h6>
                        <input type="text" class="form-control" id="filterName" placeholder="Filter" ng-model="filter" autofocus>
                    </div>*@

                <div class="form-group col-sm-12" ng-controller="PoinameTypeAheadController">
                    <h6>Activity Name<small class="btn-link pull-right" ng-click="clearNameFilter()">Clear</small></h6>
                    <typeaheadpoi items="items" templateurl="PoiNameTemplate" prompt="Name" title="name" subtitle="typ" model="$parent.SelectedActivityName" idmodel="$parent.SelectedActivityId" on-select="onItemSelected()" />
                </div>

                <div class="form-group col-sm-12" ng-controller="LocationTypeAheadController">
                    <h6>Location<small class="btn-link pull-right" ng-click="clearLocationFilter()">Clear</small></h6>
                    <typeaheadpoi items="locitems" templateurl="LocationNameTemplate" prompt="Tourismverein" title="name" subtitle="typ" model="$parent.SelectedLocationName" submodel="$parent.SelectedLocationTyp" idmodel="$parent.SelectedLocationId" on-select="onItemSelected()" />
                </div>

                <div class="form-group col-sm-12" ng-controller="SkiAreaTypeAheadController">
                    <h6>Skiregion/Skiarea<small class="btn-link pull-right" ng-click="clearSkiAreaFilter()">Clear</small></h6>
                    <typeaheadpoi items="skiitems" templateurl="SkiAreaNameTemplate" prompt="Name" title="name" subtitle="typ" model="$parent.SelectedSkiAreaName" submodel="$parent.SelectedSkiAreaTyp" idmodel="$parent.SelectedSkiAreaIds" on-select="onItemSelected()" />
                </div>

                <div class="form-group col-sm-12" ng-controller="SmgTagNameTypeAheadController">
                    <h6>ODH Tag<small class="btn-link pull-right" ng-click="clearTagFilter()">Clear</small></h6>
                    <typeaheadsmgtag items="items" templateurl="SmgTagNameTemplate" prompt="Name" title="name" model="$parent.SelectedSmgTagName" idmodel="$parent.SelectedSmgTagId" on-select="onItemSelected()" />
                </div>

                <div class="form-group col-sm-12">
                    <h6>Distance Length (km)<small class="btn-link pull-right" ng-click="clearDistanceFilter()">Clear</small></h6>
                    <div range-slider min="0" max="30" step="1" model-min="distancerange.min" model-max="distancerange.max"></div>
                </div>

                <div class="form-group col-sm-12">
                    <h6>Altitude Difference (m)<small class="btn-link pull-right" ng-click="clearAltitudeFilter()">Clear</small></h6>
                    <div range-slider min="0" max="3000" step="100" model-min="altituderange.min" model-max="altituderange.max"></div>
                </div>

                <div class="form-group col-sm-12">
                    <h6>Duration (hours)<small class="btn-link pull-right" ng-click="clearDurationFilter()">Clear</small></h6>
                    <div range-slider min="0" max="10" step="1" model-min="durationrange.min" model-max="durationrange.max"></div>
                </div>

                <div class="form-group col-sm-12">
                    <h6>Highlight<small class="btn-link pull-right" ng-click="clearHighlightFilter()">Clear</small></h6>
                    <input type="checkbox" class="checkbox" ng-model="highlight" />
                </div>

                <div class="form-group col-sm-12">
                    <h6>Type<small class="btn-link pull-right" ng-click="clearTypeFilter()">Clear</small></h6>
                    <div class="btn-group-vertical">
                        <label class="btn btn-default" ng-model="checkSubTypeModel.1" btn-checkbox>Rail toboggan run</label>
                        <label class="btn btn-default" ng-model="checkSubTypeModel.2" btn-checkbox>Ice rinks</label>
                        <label class="btn btn-default" ng-model="checkSubTypeModel.3" btn-checkbox>Tobbogan run</label>
                        <label class="btn btn-default" ng-model="checkSubTypeModel.4" btn-checkbox>Snow tracks</label>
                        <label class="btn btn-default" ng-model="checkSubTypeModel.5" btn-checkbox>Others sledging</label>
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <h6>active on source<small class="btn-link pull-right" ng-click="clearTICActiveFilter()">Clear</small></h6>
                    <select class="form-control" id="selectTyp" ng-model="active">
                        <option value="null">all</option>
                        <option value="true">active</option>
                        <option value="false">not active</option>
                    </select>
                </div>

                <div class="form-group col-sm-12">
                    <h6>available on ODHActivityPoi<small class="btn-link pull-right" ng-click="clearActiveFilter()">Clear</small></h6>
                    <select class="form-control" id="selectTyp" ng-model="smgactive">
                        <option value="null">all</option>
                        <option value="true">active</option>
                        <option value="false">not active</option>
                    </select>
                </div>

                <div class="form-group col-sm-12">
                    <br />
                    <input type="button" id="filterbutton" ng-click="applyFilter(1)" class="btn btn-info" value="Filter" />
                    <input type="button" id="clearfilterbutton" ng-click="clearFilter()" class="btn btn-default" value="Clear" />
                    <br />
                    <br />
                </div>

            </div>

        </div>

        <div class="col-sm-9 col-xs-12 table-responsive">

            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th style="width:160px">MainImage</th>
                        <th style="min-width: 80px;">Shortname</th>
                        <th style="min-width: 80px;">Type</th>
                        <th style="min-width: 80px;">Location</th>
                        <th style="min-width: 80px;">active on source</th>
                        @*<th style="min-width: 80px;">ODH active</th>*@
                        <th style="min-width: 80px;">Outdooractive</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="activity in activities | filter:query">
                        <td>
                            <div style="max-width:150px;min-height:75px">
                                <img class="img-thumbnail img-responsive" @*style="max-height:150px;max-width:150px"*@ ng-src="{{  activity.ImageGallery[0] != NULL && activity.ImageGallery[0].ImageUrl + '&W=150&H=150' || '../img/noimage.png' }}" @*ng-hide="activity.ImageGallery[0] == NULL"*@ title="{{ activity.ImageGallery[0].ImageDesc['de']}}" ng-click="showInfoModal(activity)" />
                            </div>
                        </td>
                        @*<td>{{ activity.Id }}</td>*@
                        <td>{{ activity.Detail[lang].Title }}</td>
                        <td>{{ activity.AdditionalPoiInfos[lang].MainType }} - {{ activity.AdditionalPoiInfos[lang].SubType }}</td>
                        <td>{{ activity.LocationInfo.RegionInfo.Name[lang] }} - {{ activity.LocationInfo.TvInfo.Name[lang] }}</td>
                        <td>
                            <div class="glyphicon glyphicon-ok" ng-show="activity.Active"></div>
                            <div class="glyphicon glyphicon-remove" ng-show="activity.Active == false"></div>
                        </td>

                        @*<td>
                            <div class="glyphicon glyphicon-ok" ng-show="activity.SmgActive" style="color:green"></div>
                            <div class="glyphicon glyphicon-remove" ng-show="activity.SmgActive == false" style="color:red"></div>
                        </td>*@
                        <td>
                            <a class="btn btn-xs btn-success" ng-show="activity.OutdooractiveID > 0" href="https://regio.outdooractive.com/oar-suedtirol-alto-adige/r/{{ activity.OutdooractiveID }}/" target="_blank">Outdooractive</a>
                        </td>
                        <td>
                            <div class="btn-group-vertical">
                                @if (@ViewBag.globalmodify == true || @ViewBag.activitymodify == true || @ViewBag.globaldetail == true)
                                {
                                    <a ng-click="editactivity(activity)" class="btn btn-responsive btn-info">edit</a>
                                }
                                @if (@ViewBag.globaldelete == true || @ViewBag.activitydelete == true)
                                {
                                    <a ng-click="deleteactivity(activity.Id)" class="btn btn-responsive btn-danger">delete</a>
                                }
                                @if (@ViewBag.globalupdate == true || @ViewBag.activityupdate == true)
                                {
                                    <a ng-click="updateactivity(activity.Id)" class="btn btn-responsive btn-warning">Update</a>
                                }
                                @*@if (@ViewBag.globalmodify == true || @ViewBag.activitymodify == true)
                                {
                                    <a ng-click="opentypeselectormodal(activity)" class="btn btn-responsive btn-primary">to ODH</a>
                                }*@
                                <a ng-click="showInfoModal(activity)" class="btn btn-responsive btn-success" style="width:70px;">Detail</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="form-inline">
                @if (@ViewBag.globalcreate == true || @ViewBag.activitycreate == true)
                {
                    <div class="pull-left">
                        <a ng-click="editactivity('new')" class="btn btn-small btn-success">New</a>
                    </div>
                }
                <div class="pull-right">
                    <span class="btn btn-default"> Elements: {{ totalcount }} </span>
                    <input type="button" id="prevpage" ng-click="changePage(-1,true)" class="btn btn-info" value="prev" ng-disabled="page == 1" />
                    &nbsp;{{ page }}&nbsp;/&nbsp;{{ totalpages }}&nbsp;
                    <input type="button" id="nextpage" ng-click="changePage(+1,true)" class="btn btn-info" value="next" ng-disabled="page == totalpages || totalpages == 0" />
                </div>
            </div>
        </div>
    </div>

    <script type="text/ng-template" id="myActivityModal.html">
        <form name="activityform">
            <div class="modal-header">
                <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Activity Details</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="btn-group pull-left">
                            <p>
                                Available Languages:
                                <label class="btn btn-default" ng-repeat="activitylang in activity.HasLanguage">{{activitylang}}</label>
                            </p>
                        </div>

                        <div class="btn-group pull-right">
                            <label class="btn btn-default" ng-model="lang" btn-radio="'de'">de</label>
                            <label class="btn btn-default" ng-model="lang" btn-radio="'it'">it</label>
                            <label class="btn btn-default" ng-model="lang" btn-radio="'en'">en</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <tabset>

                            <tab heading="General">
                                <br />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <label for="inputId" class="col-sm-4 control-label">Id</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputId" placeholder="Id" ng-model="activity.Id" ng-show="newactivity" required>
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputId" placeholder="Id" ng-model="activity.Id" ng-show="!newactivity" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="inputName" class="col-sm-4 control-label">Shortname</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputName" placeholder="Shortname" ng-model="activity.Shortname" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputSmgId" class="col-sm-4 control-label">Outdooractive Id</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputSmgId" ng-model="activity.OutdooractiveID" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputName" class="col-sm-4 control-label">Last Changed</label>
                                                <div class="col-sm-8">
                                                    <div class="form-control">{{ activity.LastChange | moment:'DD-MM-YYYY HH:mm' }}</div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputName" class="col-sm-4 control-label">active on source</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="form-control" id="checkboxActive" ng-model="activity.Active" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputName" class="col-sm-4 control-label">ODH active</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="form-control" id="checkboxSmgActive" ng-model="activity.SmgActive" disabled>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-horizontal">

                                            <div class="form-group">
                                                <label for="inputTourismorganization" class="col-sm-4 control-label">Tourismorganization</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputTourismorganization" ng-model="activity.TourismorganizationId" readonly>
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                <label for="inputArea" class="col-sm-4 control-label">LTS Area</label>
                                                <div class="col-sm-8">
                                                    <ul class="list-group" style="margin-bottom:0px">
                                                        <li class="list-group-item" style="padding:0px" ng-repeat="area in activity.AreaId"><input type="text" class="form-control notextareamaxwitdth" id="inputArea" ng-model="area" readonly></li>
                                                    </ul>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputPoiType" class="col-sm-4 control-label">Type</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputPoiType" ng-model="activity.Type" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputSubTyp" class="col-sm-4 control-label">SubType</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputSubTyp" ng-model="activity.SubType" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputPoiType" class="col-sm-4 control-label">PoiType</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputPoiType" ng-model="activity.PoiType" readonly>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </tab>

                            <tab heading="Properties">
                                <br />
                                <div class="row">

                                    <div class="col-sm-6">

                                        <div class="form-horizontal">

                                            <div class="form-group">
                                                <label for="inputTyp" class="col-sm-4 control-label">Difficulty</label>
                                                <div class="col-sm-8">
                                                    <select class="form-control" id="selectTyp" ng-model="activity.Difficulty" disabled>
                                                        <option>leicht</option>
                                                        <option>wenig schwierig</option>
                                                        <option>mäßig schwierig</option>
                                                        <option>schwierig</option>
                                                        <option>sehr schwierig</option>
                                                        <option>extrem schwierig</option>
                                                        <option>blau</option>
                                                        <option>rot</option>
                                                        <option>schwarz</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputHighlight" class="col-sm-4 control-label">Highlight</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputHighlight" ng-model="activity.Highlight" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputIsOpen" class="col-sm-4 control-label">Open</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputIsOpen" ng-model="activity.IsOpen" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputIsPrepared" class="col-sm-4 control-label">Prepared</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputIsPrepared" ng-model="activity.IsPrepared" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputIsWithLigth" class="col-sm-4 control-label">WithLight</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputIsWithLigth" ng-model="activity.IsWithLigth" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputHasRentals" class="col-sm-4 control-label">HasRental</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputHasRentals" ng-model="activity.HasRentals" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputRunToValley" class="col-sm-4 control-label">RuntoValley</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputRunToValley" ng-model="activity.RunToValley" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputLiftAvailable" class="col-sm-4 control-label">LiftAvailable</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputLiftAvailable" ng-model="activity.LiftAvailable" disabled>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputFeetClimb" class="col-sm-4 control-label">FeetClimb</label>
                                                <div class="col-sm-8">
                                                    <input type="checkbox" class="checkbox" id="inputFeetClimb" ng-model="activity.FeetClimb" disabled>
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                    <div class="col-sm-6">

                                        <div class="form-horizontal">

                                            <div class="form-group">
                                                <label for="inputAltitudeDifference" class="col-sm-4 control-label">Altitudedifference</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputAltitudeDifference" placeholder="Altitudedifference" ng-model="activity.AltitudeDifference" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputAltitudeHighestPoint" class="col-sm-4 control-label">Altitude Highest</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputAltitudeHighestPoint" placeholder="AltitudeHighestPoint" ng-model="activity.AltitudeHighestPoint" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputAltitudeLowestPoint" class="col-sm-4 control-label">Altitude Lowest</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputAltitudeLowestPoint" placeholder="AltitudeLowestPoint" ng-model="activity.AltitudeLowestPoint" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputAltitudeSumUp" class="col-sm-4 control-label">Altitude SumUp</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputAltitudeSumUp" placeholder="AltitudeSumUp" ng-model="activity.AltitudeSumUp" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputAltitudeSumDown" class="col-sm-4 control-label">Altitude Highest</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputAltitudeSumDown" placeholder="AltitudeSumDown" ng-model="activity.AltitudeSumDown" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputDistanceLength" class="col-sm-4 control-label">Length</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputDistanceLength" placeholder="Length" ng-model="activity.DistanceLength" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputAltitudeDifference" class="col-sm-4 control-label">Duration</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="inputDistanceDuration" placeholder="DistanceDuration" ng-model="activity.DistanceDuration" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputexpostion" class="col-sm-4 control-label">Exposition</label>
                                                <div class="col-sm-8">
                                                    <ul class="list-group" style="margin-bottom:0px">
                                                        <li class="list-group-item" style="padding:0px" ng-repeat="exposition in activity.Exposition"><input type="text" class="form-control" id="inputexpostion" ng-model="exposition" readonly></li>
                                                    </ul>
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </tab>

                            <tab heading="Detail">
                                <br />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-horizontal">

                                            <div class="form-group">
                                                <label for="inputTitle" class="col-sm-2 control-label">Title</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control notextareamaxwitdth" id="inputTitle" placeholder="Title" ng-model="activity.Detail[lang].Title" ng-disabled="lang == 'de' || lang == 'it' || lang == 'en'">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputIntroText" class="col-sm-2 control-label">IntroText / ShortText</label>
                                                <div class="col-sm-10">
                                                    <textarea rows="5" class="form-control notextareamaxwitdth" id="inputIntroText" placeholder="IntroText" ng-model="activity.Detail[lang].IntroText" ng-disabled="lang == 'de' || lang == 'it' || lang == 'en'"></textarea>
                                                </div>
                                            </div>

                                            <div class="form-group">
